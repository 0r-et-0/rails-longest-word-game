<h1>Longest Word Game</h1>
<div class='grid-container'>
  <% @grid.each do |g|%>
    <div class='letters-box'>
      <span class='letters'><%= g.upcase %></span>
    </div>
  <% end %>
</div>
  <form action="/score" method="post" data-turbo="false">
      <input type="text" name="answer" placeholder="What's your guess ?">

      <input type="submit">

      <%= hidden_field_tag :grid, @grid %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
